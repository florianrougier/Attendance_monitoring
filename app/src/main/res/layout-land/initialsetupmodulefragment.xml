<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <LinearLayout
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
    android:layout_width="380dp"
    android:layout_height="280dp"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1"
    android:background="#7e9d00"
    android:id="@+id/linearLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/usernamefragment"
            android:layout_marginTop="-60dp"
            android:typeface ="sans"
            android:textStyle="bold"
            android:paddingTop="-190dp"
            android:paddingLeft="5dp"
            android:layout_alignParentBottom="true"/>

        <EditText
        android:layout_marginTop="-10dp"
        android:paddingLeft="20dp"
        android:id="@+id/salarysetup"
        android:layout_width="178dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:hint= "@string/spinnersetup"
        android:background="@android:color/transparent" >
    </EditText>
    <View
        android:layout_width="178dp"
        android:layout_height="0.1px"
        android:background="@color/white" />


    <EditText
        android:paddingLeft="20dp"
        android:id="@+id/recurringbills"
        android:layout_width="178dp"
        android:layout_height="60dp"
        android:text="@string/recurringbills"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >
    </EditText>


    <ImageButton
        android:id="@+id/moreImageButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:contentDescription="@string/recurring_bills_add"
        android:src="@android:drawable/ic_input_add" />

    <EditText
        android:id="@+id/et1"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:background="@drawable/billseditext"/>
    <EditText
        android:layout_marginTop="3dp"
        android:layout_marginBottom="-13dp"
        android:id="@+id/et2"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:background="@drawable/billseditext"/>

</LinearLayout>


</RelativeLayout>
